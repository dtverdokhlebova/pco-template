extends layouts/layout

block variables
  -
    const pageName = 'about'
    const pageTitle = 'О компании'

  -
    const bannerData = {
      items: [{
        img: 'img/banner-img-about.jpg',
        h1: 'О компании',
      }]
    }

  -
    const advantagesData ={
      items: [
        { h2: 'Обширный опыт', p1: 'Мы обладаем 6-летним опытом работы в сфере архитектуры, что гарантирует нашу экспертизу и профессионализм в каждом проекте' },
        { h2: 'Гарантия качества', p1: 'Независимо от сложности проекта, мы гарантируем высокое качество выполнения, опираясь на наш профессионализм и опыт.' },
        { h2: 'Богатое портфолио', p1: 'Наше портфолио включает сотни успешных проектов, демонстрируя наше мастерство и способность к реализации разнообразных задач.' },
        { h2: 'Ориентация на результат', p1: 'Мы не просто выполняем задачи, мы стремимся к достижению конкретных результатов для наших клиентов, учитывая их потребности и ожидания.' },
        { h2: 'Гибкая ценовая политика', p1: 'Мы предлагаем гибкие цены, что позволяет адаптироваться к разным бюджетам клиентов и обеспечивать доступность наших услуг для широкого круга заказчиков.' },
        { h2: 'Творческий дизайн', p1: 'Креативные решения, отражающие индивидуальность каждого проекта. Уделяем внимание деталям и эстетике.' },
      ]
    }

  -
    const whoWeData =[
      { img: 'img/who-we-img-about-1.jpg',
        p1: 'Мы гордимся нашим сертификатом ISO 9001 и свидетельствами СРО на проведение проектных архитектурных работ, что подтверждает нашу компетентность и профессионализм в данной области. Наша компания строго соблюдает все стандарты и нормативы, чтобы обеспечить безупречное качество и соответствие всем требованиям законодательства.',
      },
      { img: 'img/who-we-img-about-2.jpg',
        p1: 'Мы работаем как с юридическими, так и с физическими лицами, предлагая индивидуальный подход к каждому проекту и клиенту. Независимо от масштаба и сложности задачи, мы гарантируем высокий профессионализм, творческий подход и точное выполнение всех обязательств.',
      },
    ]

block content
  main#main.main
    +banner(bannerData)
    +nav
    +section('--bg')#section-about(data-section='Кто? Мы')
      .inner
        +section-head('[Кто? Мы]')
          +ui-h1('"РСО-Проектный Центр"', 'section-head')
          +ui-h2('С 2017 года, компания "РСО-Проектный Центр" является ведущим исполнителем в области разработки проектной, сметной и рабочей документации для объектов капитального строительства', 'section-head')
        +section-grid
          +who-we(whoWeData)
          +section-grid-item('--d-order-1, --d-al-end')
            +ui-button('Узнать цену проектирования', '--pd-x-s, --pd-y-l, --t-w100, --light-bg')(href='#')
    +section('--animation')#section-mission(data-section='Наша миссия')
      .inner
        +mission
    +section('--bg, --animation')#section-advantages(data-section='Преимущества')
      .inner
        +section-head('[Преимущества]')
          +ui-h1('Почему мы - лучший выбор в&nbsp;проектировании', 'section-head')
        +section-grid
          +advantages(advantagesData, '--light')
          +section-grid-item('--d-order-1, --d-al-end')
            +ui-p1('').ui-grey2
              | “В мире стремительных перемен и инноваций, выбор правильного партнера для проектирования становится важным фактором успеха. Наша компания, "РСО-Проектный Центр", безусловно, занимает лидирующее положение в этой области, и вот почему мы -  лучший выбор.”
    +section#section-awards(data-section='Наши награды')
      .inner
        +section-head('[Наши награды]')
          +ui-h1('Благодарность от наших клиентов', 'section-head')
        +awards
